<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appsinfinity.www.agriculture.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar_action_bar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="center"
        android:background="#b3b3b3"
        android:foregroundGravity="center"
        android:layout_above="@id/lv_ctrl_board">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/imv_chosen_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/lv_ctrl_board">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_positive_1"
            android:text="Change Image"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:id="@+id/btn_change_image"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/custom_background_button_positive_1"
            android:text="Continue >"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:id="@+id/btn_continue"/>

    </LinearLayout>

</RelativeLayout>
